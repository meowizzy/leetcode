{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": false,
    "module": "commonjs",
    "isolatedModules": true,
    "allowJs": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "isolatedModules": true
    }
  }
}